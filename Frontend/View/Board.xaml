<Window x:Class="IntroSE.Kanban.Frontend.View.Board"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntroSE.Kanban.Frontend.View"
        mc:Ignorable="d"
        Title="Board" Height="600" Width="900">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="\Images\Board_Background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="698" Margin="122,26,0,0" Grid.Column="1" Height="39">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170*"/>
                <ColumnDefinition Width="179*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Board creator:" HorizontalAlignment="Left" Margin="88,0,0,0" VerticalAlignment="Center" Height="37" Width="117" FontWeight="Bold" FontSize="16" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Margin="210,0,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Center" Width="146" Height="31" FontSize="16" Grid.Column="1" Background="{x:Null}" BorderBrush="{x:Null}"/>
            <TextBox HorizontalAlignment="Left" Margin="170,0,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Center" Width="146" Height="31" FontWeight="Normal" FontSize="16" BorderBrush="{x:Null}" Background="{x:Null}"/>
            <Label Content="Board name:" HorizontalAlignment="Left" VerticalAlignment="Center" Height="39" Width="105" FontWeight="Bold" FontSize="16" Margin="65,0,0,0"/>
        </Grid>
        <Button x:Name="btn6" BorderBrush="Black" Content="Click the picture." Margin="0,0,567,0"/>
        <Button x:Name="btn7" BorderBrush="Black" Content="Click the picture." Margin="0,0,567,0"/>
        <Button x:Name="btn5" Click="OnClick5" Grid.ColumnSpan="2" Margin="10,0,814,504" FontWeight="Normal" Background="{x:Null}" BorderBrush="{x:Null}">
            <Image Source="\Images\back_button.png" Height="71" Width="67"/>
        </Button>
        <Button x:Name="btn8" Click="OnClick5" Grid.ColumnSpan="2" Margin="828,89,29,461" FontWeight="Normal" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <Button x:Name="btn8_Copy" Click="OnClick5" Grid.ColumnSpan="2" Margin="786,90,69,460" FontWeight="Normal" Background="{x:Null}" BorderBrush="{x:Null}">
            <Image Source="/Images/arrow.png" Height="31" Width="27" StretchDirection="Both" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="90"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Button>
        <Button x:Name="btn8_Copy1" Click="OnClick5" Grid.ColumnSpan="2" Margin="826,89,29,461" FontWeight="Normal" Background="{x:Null}" BorderBrush="{x:Null}">
            <Image Source="/Images/arrow.png" Height="31" Width="27" StretchDirection="Both" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-90"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Button>
        <Label Content="Columns scrolling" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="28" Margin="770,62,0,0" VerticalAlignment="Top" Width="112"/>
        <Grid Grid.Column="1" HorizontalAlignment="Center" Height="112" Margin="0,462,0,0" VerticalAlignment="Top" Width="864">
            <Button Content="Move" Height="39" Width="78" Background="{x:Null}" BorderBrush="Gray" VerticalAlignment="Top" Margin="107,73,0,0" HorizontalAlignment="Left" Click="Button_Click_1" FontWeight="Bold" FontSize="14"/>
            <Button Content="Delete" Height="45" Width="106" Background="{x:Null}" BorderBrush="Gray" VerticalAlignment="Top" Margin="543,60,0,0" HorizontalAlignment="Left" Click="Button_Click_2" FontWeight="Bold" FontSize="14"/>
            <Button Content="Limit column" Height="38" Width="98" Background="{x:Null}" BorderBrush="Gray" VerticalAlignment="Top" Margin="264,73,0,0" HorizontalAlignment="Left" FontWeight="Bold" FontSize="14"/>
            <Button Content="Add column" Height="38" Width="106" Background="{x:Null}" BorderBrush="Gray" VerticalAlignment="Top" Margin="726,72,0,0" HorizontalAlignment="Left" FontWeight="Bold" FontSize="14"/>
            <Button Content="Add task" Height="45" Width="94" Background="{x:Null}" BorderBrush="Gray" VerticalAlignment="Top" Margin="432,60,0,0" HorizontalAlignment="Left" FontWeight="Bold" FontSize="14"/>
            <Label Content="tools:" Height="32" Width="79" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold" FontStyle="Italic" FontSize="16" Margin="0,60,0,0"/>
            <TextBox Height="20" Text="TextBox" TextWrapping="Wrap" Width="140" VerticalAlignment="Top" Margin="243,46,0,0" HorizontalAlignment="Left" FontSize="14"/>
            <TextBox Height="20" Text="TextBox" TextWrapping="Wrap" Width="120" VerticalAlignment="Top" Margin="86,45,0,0" HorizontalAlignment="Left" FontSize="14"/>
            <TextBox Height="20" Text="TextBox" TextWrapping="Wrap" Width="162" VerticalAlignment="Top" Margin="698,44,0,0" HorizontalAlignment="Left" TextChanged="TextBox_TextChanged" FontSize="14"/>
        </Grid>
        <Border Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="351" Margin="51,106,0,0" VerticalAlignment="Top" Width="216" BorderBrush="#FF1478CB" BorderThickness="3,3,3,3">
            <ListView SelectionChanged="ListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        <Border Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="350" Margin="299,107,0,0" VerticalAlignment="Top" Width="216" BorderThickness="3,3,3,3" BorderBrush="#FF1478CB">
            <ListView>
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        <Border Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="350" Margin="548,107,0,0" VerticalAlignment="Top" Width="216" BorderThickness="3,3,3,3" BorderBrush="#FF1478CB">
            <ListView>
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        <StackPanel Grid.Column="1" HorizontalAlignment="Left" Margin="55,68,0,0" Orientation="Horizontal" VerticalAlignment="Top">
            <CheckBox Content="" Height="18" Width="25" Background="{x:Null}"/>
            <Label Content="Name" Height="32" Width="79" FontWeight="Bold" FontStyle="Italic" FontSize="16"/>
        </StackPanel>
        <StackPanel Grid.Column="1" HorizontalAlignment="Left" Margin="303,68,0,0" Orientation="Horizontal" VerticalAlignment="Top">
            <CheckBox Content="" Height="18" Width="25" Background="{x:Null}"/>
            <Label Content="Name" Height="32" Width="79" FontWeight="Bold" FontStyle="Italic" FontSize="16"/>
        </StackPanel>
        <StackPanel Grid.Column="1" HorizontalAlignment="Left" Margin="552,68,0,0" Orientation="Horizontal" VerticalAlignment="Top">
            <CheckBox Content="" Height="18" Width="25" BorderBrush="#FF707070" Background="{x:Null}"/>
            <Label Content="Name" Height="32" Width="79" FontWeight="Bold" FontStyle="Italic" FontSize="16"/>
        </StackPanel>
        <TextBox Height="20" Text="TextBox" TextWrapping="Wrap" Width="394" VerticalAlignment="Top" Margin="223,473,0,0" HorizontalAlignment="Left" FontSize="14" Grid.ColumnSpan="2"/>
        <Label Content="limit:" Height="30" Width="56" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold" FontStyle="Italic" FontSize="14" Margin="173,76,0,0" Grid.ColumnSpan="2"/>
        <Label Content="#" Height="30" Width="44" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold" FontStyle="Italic" FontSize="14" Margin="229,76,0,0" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
